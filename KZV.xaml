<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCANAppM.KZV"
             Title="KZV Configuration">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Start / Stop CAN -->
            <Button x:Name="StartStopButton1"
                    Text="Start"
                    Clicked="OnStartStopClicked"
                    TextColor="WhiteSmoke"
                    BackgroundColor="Black"
                    HorizontalOptions="Center" />

            <!-- Manual ID/Data Entry -->
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="CanIdEntry1"
                       Placeholder="ID (dec)"
                       Keyboard="Numeric"
                       TextChanged="OnCanIdEntryChanged"
                       WidthRequest="100" />
                <Entry x:Name="CanIdHexEntry1"
                       Placeholder="ID (hex)"
                       Keyboard="Text"
                       TextChanged="OnCanIdHexEntryChanged"
                       WidthRequest="100" />
            </HorizontalStackLayout>

            <Entry x:Name="DataEntry1"
                   Placeholder="Data bytes (hex)" />
            <Entry x:Name="LengthEntry1"
                   Placeholder="Length"
                   Keyboard="Numeric" />

            <Button x:Name="SendButton1"
                    Text="Send"
                    Clicked="OnSendClicked"
                    IsEnabled="False"
                    TextColor="WhiteSmoke"
                    BackgroundColor="Black"
                    HorizontalOptions="Center" />

            <!-- Received / Sent Messages -->
            <Label Text="Received Messages:" TextColor="Black" />
            <CollectionView x:Name="CanMessagesView"
                            HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding Direction}" WidthRequest="30" />
                            <Label Text="{Binding Id}" WidthRequest="80" />
                            <Label Text="{Binding Data}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Update CAN ID Section -->
            <Entry x:Name="NewCanIdEntry1"
                   Placeholder="New ID (hex)"
                   HorizontalOptions="Center"
                   WidthRequest="200" />

            <Button x:Name="UpdateCanIdButton1"
                    Text="Update CAN ID"
                    Clicked="OnConfirmCanIdButtonClicked"
                    HorizontalOptions="Center" />

            <!-- Display latest CAN ID -->
            <Label x:Name="LatestCanIdLabel1"
                   Text="Latest CAN ID: --"
                   TextColor="Black"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
