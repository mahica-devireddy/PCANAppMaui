<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCANAppM.KZV"
             BackgroundColor="Black">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Grid Grid.Row="0" ColumnSpacing="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <Image Source="oshkosh_logo.png"
                   HeightRequest="30"
                   HorizontalOptions="Start"
                   VerticalOptions="Center" />

            <!-- Globe Icon -->
            <Image Source="globe_icon.png"
                   HeightRequest="30"
                   HorizontalOptions="End"
                   VerticalOptions="Center"
                   Grid.Column="1"/>
        </Grid>

        <!-- Image of the part -->
        <Image Source="valve_image.png"
               Grid.Row="1"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Aspect="AspectFit"
               HeightRequest="150"/>

        <!-- Text and Button -->
        <VerticalStackLayout Grid.Row="2"
                             Spacing="10"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
            <Label x:Name="CurrentCanIdLabel"
                   Text="Current CAN ID: 192"
                   FontSize="22"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>
            
            <Button Text="Set CAN ID"
                    x:Name="SetCanIdButton"
                    Clicked="OnSetCanIdClicked"
                    BackgroundColor="White"
                    TextColor="Black"
                    CornerRadius="30"
                    Padding="15,5"
                    FontSize="18"
                    HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
