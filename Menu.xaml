<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"  
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"  
    shell:Shell.NavBarIsVisible="False"  
    x:Class="PCANAppM.Menu" 
    BackgroundColor="Black">

    <Grid RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="*,Auto" Padding="20">

        <!-- HEADER -->
        <Grid Grid.Row="0"  
            Padding="15"  
            ColumnDefinitions="Auto,*,Auto">
            <!-- Oshkosh logo -->
            <Image Source="oshkosh_logo.png"  
                   HeightRequest="65"  
                   WidthRequest="180"  
                   VerticalOptions="Center" />

            <!-- Language toggle -->
            <ImageButton Grid.Column="2"  
                         Source="language_icon.png"  
                         HeightRequest="65"  
                         WidthRequest="75"  
                         BackgroundColor="Transparent"  
                         Clicked="OnLanguageButtonClicked"  
                         VerticalOptions="Center" />
        </Grid>

        <!-- TITLE + BUTTONS + IMAGES -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="20">

            <!-- Left Side -->
            <VerticalStackLayout Spacing="30" VerticalOptions="Center">
                <Label Grid.Row="1"  
                       Grid.ColumnSpan="2"  
                       Text="Connect PCAN Device To..."  
                       FontSize="90"  
                       FontAttributes="Bold"  
                       FontFamily="BarlowRegular"  
                       TextColor="White"  
                       HorizontalTextAlignment="Center"  
                       Margin="0,0,0,0" />

                <HorizontalStackLayout HorizontalOptions="End" Spacing="20" Margin="0,0,130,0">
                    <Image Source="angle_sensor.png" HeightRequest="150" WidthRequest="600" VerticalOptions="Center" />
                    <Button Text="{localization:Translate BAS}"  
                            FontFamily="BarlowRegular"  
                            TextColor="White"  
                            FontAttributes="Bold"  
                            FontSize="28"  
                            BackgroundColor="Transparent"  
                            BorderColor="White"  
                            BorderWidth="5"  
                            CornerRadius="50"  
                            HeightRequest="100"  
                            WidthRequest="600"
                            Clicked="OnBoomAngleSensorClicked"
                            />
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="End" Spacing="20" Margin="0,0,130,0">
                    <Image Source="angle_sensor.png" HeightRequest="150" WidthRequest="600" VerticalOptions="Center" />
                    <Button Text="{localization:Translate KZV}"   
                            TextColor="White"  
                            FontAttributes="Bold"  
                            FontFamily="BarlowRegular"  
                            FontSize="28"  
                            BackgroundColor="Transparent"  
                            BorderColor="White"  
                            BorderWidth="5"  
                            CornerRadius="50"  
                            HeightRequest="100" 
                            WidthRequest="600"
                            Clicked="OnKZValveClicked"
                            />
                </HorizontalStackLayout>

                <HorizontalStackLayout HorizontalOptions="End" Spacing="20" Margin="0,0,130,0">
                    <Image Source="angle_sensor.png" HeightRequest="150" WidthRequest="600" VerticalOptions="Center" />
                    <Button Text="{localization:Translate FTLS}" 
                            TextColor="White"  
                            FontAttributes="Bold"
                            FontFamily="BarlowRegular"  
                            FontSize="28"  
                            BackgroundColor="Transparent"  
                            BorderColor="White"  
                            BorderWidth="5"  
                            CornerRadius="50"  
                            HeightRequest="100"  
                            WidthRequest="600"
                            Clicked="OnFluidTankLevelSensorClicked"
                            />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
