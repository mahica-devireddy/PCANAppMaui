<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"  
    xmlns:shell="http://schemas.microsoft.com/dotnet/2021/maui"  
    shell:Shell.NavBarIsVisible="False"  
    x:Class="PCANAppM.Menu" 
    BackgroundColor="Black">
    
    <Grid RowDefinitions="Auto,Auto,*,Auto" ColumnDefinitions="*,Auto" Padding="20">

        <!-- HEADER -->
        <Grid Grid.Row="0"  
            Padding="15"  
            ColumnDefinitions="Auto,*,Auto">
            <!-- Oshkosh logo -->
            <Image Source="oshkosh_logo.png"  
           HeightRequest="65"  
           WidthRequest="180"  
           VerticalOptions="Center" />

            <!-- Language toggle -->
            <ImageButton Grid.Column="2"  
                 Source="language_icon.png"  
                 HeightRequest="65"  
                 WidthRequest="75"  
                 BackgroundColor="Transparent"  
                 Clicked="OnLanguageButtonClicked"  
                 VerticalOptions="Center" />  
        </Grid>  

        <!-- TITLE + BUTTONS + IMAGES -->  
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="20">  

            <!-- Left Side -->  
            <VerticalStackLayout Spacing="70" VerticalOptions="Center">  
                <Label Grid.Row="1"  
                       Grid.ColumnSpan="2"  
                       Text="Connect PCAN Device To..."  
                       FontSize="90"  
                       FontAttributes="Bold"  
                       FontFamily="BarlowRegular"  
                       TextColor="White"  
                       HorizontalTextAlignment="Center"  
                       Margin="0,0,0,0" />  

                <Button Text="{localization:Translate BAS}"  
                        HorizontalOptions="Start"
                        FontFamily="BarlowRegular"  
                        TextColor="White"  
                        FontAttributes="Bold"  
                        FontSize="28"  
                        BackgroundColor="Transparent"  
                        BorderColor="White"  
                        BorderWidth="5"  
                        CornerRadius="50"  
                        HeightRequest="100"  
                        WidthRequest="600"
                        Margin="100,0,0,0"
                        Clicked="OnBoomAngleSensorClicked" />

                <Button Text="{localization:Translate KZV}"   
                        HorizontalOptions="Start"
                        TextColor="White"  
                        FontAttributes="Bold"  
                        FontFamily="BarlowRegular"  
                        FontSize="28"  
                        BackgroundColor="Transparent"  
                        BorderColor="White"  
                        BorderWidth="5"  
                        CornerRadius="50"  
                        HeightRequest="100" 
                        WidthRequest="600"
                        Margin="100,0,0,0"
                        Clicked="OnKZValveClicked" />

                <Button Text="{localization:Translate FTLS}" 
                        HorizontalOptions="Start"
                        TextColor="White"  
                        FontAttributes="Bold"
                        FontFamily="BarlowRegular"  
                        FontSize="28"  
                        BackgroundColor="Transparent"  
                        BorderColor="White"  
                        BorderWidth="5"  
                        CornerRadius="50"  
                        HeightRequest="100"  
                        WidthRequest="600"
                        Margin="100,0,0,0"
                        Clicked="OnFluidTankLevelSensorClicked" />  
            </VerticalStackLayout> 
        </Grid>  

    </Grid>  
</ContentPage>
