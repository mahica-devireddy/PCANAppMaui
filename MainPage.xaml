<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:LocalizationResourceManager.Maui;assembly=LocalizationResourceManager.Maui"
    x:Class="PCANAppM.MainPage"
    BackgroundColor="Black"
    Title="PCAN Status">

  <!-- Layout grid: 
       Row 0 = header (logo + language button)
       Row 1 = middle (device image + status text + status icon)
       Row 2 = footer (“Next” button) -->
  <Grid RowDefinitions="Auto,*,Auto"
        ColumnDefinitions="*">

    <!-- HEADER -->
    <Grid Grid.Row="0"
          Padding="20"
          ColumnDefinitions="Auto,*,Auto">
      <!-- Oshkosh logo -->
      <Image Source="oshkosh_logo.png"
             HeightRequest="40"
             VerticalOptions="Center" />

      <!-- spacer column automatically fills -->

      <!-- Language toggle -->
      <ImageButton Grid.Column="2"
                   Source="language_icon.png"
                   HeightRequest="32"
                   WidthRequest="32"
                   BackgroundColor="Transparent"
                   Clicked="OnLanguageButtonClicked"
                   VerticalOptions="Center" />
    </Grid>

    <!-- MIDDLE -->
    <VerticalStackLayout
        Grid.Row="1"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Spacing="24">

      <!-- PCAN device picture -->
      <Image Source="blackpcan.png"
             Aspect="AspectFit"
             HeightRequest="280"
             WidthRequest="Auto" />

      <!-- Status text (bound/updated in code-behind) -->
      <Label x:Name="StatusLabel"
             Text="{localization:Translate Initializing}"
             FontSize="32"
             FontAttributes="Bold"
             TextColor="WhiteSmoke"
             HorizontalTextAlignment="Center" />

      <!-- Status icon (green_check.png or red_ex.png) -->
      <Image x:Name="StatusImage1"
             HeightRequest="80"
             Aspect="AspectFit"
             HorizontalOptions="Center" />
    </VerticalStackLayout>

    <!-- FOOTER -->
    <Grid Grid.Row="2"
          Padding="20">
      <Button Text="{localization:Translate NextButton}"
              Clicked="OnNextButtonClicked"
              FontSize="18"
              FontAttributes="Bold"
              BackgroundColor="WhiteSmoke"
              TextColor="Black"
              HorizontalOptions="Center"
              WidthRequest="140"
              HeightRequest="48" />
    </Grid>

  </Grid>
</ContentPage>
