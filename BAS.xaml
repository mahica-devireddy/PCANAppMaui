<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCANAppM.BAS"
             Title="BAS Configuration">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Device and Baud Rate Selection -->
            <Picker x:Name="DevicePicker"
                    Title="Select CAN Device"
                    TextColor="Black" />
            <Picker x:Name="BaudRatePicker"
                    Title="Baud Rate"
                    TextColor="Black" />

            <!-- Start / Stop CAN -->
            <Button x:Name="StartStopButton"
                    Text="Start"
                    Clicked="OnStartStopClicked"
                    TextColor="WhiteSmoke"
                    BackgroundColor="Black" />

            <!-- Manual ID/Data Entry -->
            <HorizontalStackLayout Spacing="10">
                <Entry x:Name="CanIdEntry"
                       Placeholder="ID (dec)"
                       Keyboard="Numeric"
                       TextChanged="OnCanIdEntryChanged"
                       WidthRequest="100" />
                <Entry x:Name="CanIdHexEntry"
                       Placeholder="ID (hex)"
                       Keyboard="Text"
                       TextChanged="OnCanIdHexEntryChanged"
                       WidthRequest="100" />
            </HorizontalStackLayout>
            <Entry x:Name="DataEntry"
                   Placeholder="Data bytes (hex)" />
            <Entry x:Name="LengthEntry"
                   Placeholder="Length"
                   Keyboard="Numeric" />
            <Button x:Name="SendButton"
                    Text="Send"
                    Clicked="OnSendClicked"
                    IsEnabled="False"
                    TextColor="WhiteSmoke"
                    BackgroundColor="Black" />

            <!-- Received / Sent Messages -->
            <Label Text="Received Messages:" TextColor="Black" />
            <CollectionView x:Name="CanMessagesView" HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding Direction}" WidthRequest="30" />
                            <Label Text="{Binding Id}" WidthRequest="80" />
                            <Label Text="{Binding Data}" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Update CAN ID Sequence -->
            
            <Entry x:Name="NewCanIdEntry"
                   Placeholder="New ID (hex)"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   WidthRequest="200" />
            <Button x:Name="ConfirmCanIdButton"
                    Text="Confirm"
                    IsVisible="False"
                    Clicked="OnConfirmCanIdButtonClicked"
                    HorizontalOptions="Center" />

            <!-- Display latest CAN ID -->
            <Label x:Name="LatestCanIdLabel"
                   Text="Latest CAN ID: --"
                   TextColor="Black" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
